@model BookDonorsAPI.Models.Book

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pop and Drop: A Book Donation Event</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookDonorsAPI.styles.css" asp-append-version="true" />

    <style>
        body1{
            min-height: 50vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 50px;
            background: ;
        }

        .container {
            position: relative;
            max-width: 500px;
            width: 100%;
            background-color: #edc3d4;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0,5);
        }

        .container h2 {
            font-size: 1.5rem;
            color: #333;
            font-weight: 500;
            text-align: center;
        }

        .container .form {
            margin-top: 30px;
        }

        .button {
            display: inline-block;
            padding: 5px 15px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: #fbb4d8;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
        }

            .button:hover {
                background-color: #fbb4d8
            }

            .button:active {
                background-color: #fbb4d8;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

    </style>

</head>

<h2>Delete Book</h2>

<body1>
    <section class="container">

<h3>Are you sure you want to delete this book?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Tittle
        </dd>

        <dt class="col-sm-2">
            Author 
        </dt> 
        <dd class="col-sm-10">
            @Model.Author
        </dd>

        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>

        <dt class="col-sm-2">
            Year Published
        </dt>
        <dd class="col-sm-10">
            @Model.YearPublished
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
</section>
</body1>
</html>